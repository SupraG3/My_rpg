<div class="steps-list-page">
  <div class="steps-list-container">
    <h1>Steps for <%= @quest.name %></h1>

    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th>Order</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @steps.each do |step| %>
          <tr>
            <td><%= step.description %></td>
            <td><%= step.order %></td>
            <td><%= link_to 'Show', quest_step_path(@quest, step), class: 'btn btn-show-step' %></td>
            <td><%= link_to 'Edit', edit_quest_step_path(@quest, step), class: 'btn btn-edit-step' %></td>
            <td><%= link_to 'Destroy', quest_step_path(@quest, step), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy-step' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New Step', new_quest_step_path(@quest), class: 'btn btn-new-step' %> |
    <%= link_to 'Back to Quests', quests_path, class: 'btn btn-back' %>
  </div>
</div>
